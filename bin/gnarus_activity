#!/usr/bin/env ruby
lib = File.expand_path("../../lib", __FILE__)
$:.unshift lib unless $:.include?(lib)

template = File.expand_path("../../template.rb", __FILE__)

if !ARGV[0]
  puts "qual o nome do projeto?"
else
  command = "rails new #{ARGV[0]} -m #{template}"
  puts "executando: #{command}"
  system(command)
end
